{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "outDir": "build-web"
    },
    "include": ["src/**/*", "src/index.html"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}