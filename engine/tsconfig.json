{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": false,
        "moduleResolution": "NodeNext",
        "types": ["node"],
        "resolveJsonModule": true
    },
    "include": ["index.ts", "src/**/*", "package.json", "index.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"],
}