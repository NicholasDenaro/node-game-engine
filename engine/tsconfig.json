{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": false,
        "moduleResolution": "classic",
        "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
}